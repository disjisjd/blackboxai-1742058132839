<%- include('../layouts/main', { title: 'Admin Dashboard' }) %>

<div class="container mx-auto px-4 py-8">
    <!-- Dashboard Header -->
    <div class="mb-8">
        <h1 class="text-3xl font-bold text-gray-900">Admin Dashboard</h1>
        <p class="text-gray-600">Manage Tool Store inventory and users</p>
    </div>

    <!-- Statistics Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
        <!-- Total Items -->
        <div class="bg-white rounded-lg shadow p-6">
            <div class="flex items-center">
                <div class="p-3 rounded-full bg-blue-100 text-blue-600">
                    <i class="fas fa-tools text-2xl"></i>
                </div>
                <div class="ml-4">
                    <p class="text-sm text-gray-500">Total Items</p>
                    <p class="text-2xl font-semibold text-gray-900"><%= stats.totalItems %></p>
                </div>
            </div>
        </div>

        <!-- Out of Stock -->
        <div class="bg-white rounded-lg shadow p-6">
            <div class="flex items-center">
                <div class="p-3 rounded-full bg-red-100 text-red-600">
                    <i class="fas fa-exclamation-circle text-2xl"></i>
                </div>
                <div class="ml-4">
                    <p class="text-sm text-gray-500">Out of Stock</p>
                    <p class="text-2xl font-semibold text-gray-900"><%= stats.outOfStockItems %></p>
                </div>
            </div>
        </div>

        <!-- Lost Items -->
        <div class="bg-white rounded-lg shadow p-6">
            <div class="flex items-center">
                <div class="p-3 rounded-full bg-yellow-100 text-yellow-600">
                    <i class="fas fa-question-circle text-2xl"></i>
                </div>
                <div class="ml-4">
                    <p class="text-sm text-gray-500">Lost Items</p>
                    <p class="text-2xl font-semibold text-gray-900"><%= stats.lostItems %></p>
                </div>
            </div>
        </div>

        <!-- Active Borrows -->
        <div class="bg-white rounded-lg shadow p-6">
            <div class="flex items-center">
                <div class="p-3 rounded-full bg-green-100 text-green-600">
                    <i class="fas fa-hand-holding text-2xl"></i>
                </div>
                <div class="ml-4">
                    <p class="text-sm text-gray-500">Active Borrows</p>
                    <p class="text-2xl font-semibold text-gray-900"><%= stats.activeBorrows %></p>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <!-- Manage Items -->
        <a href="/admin/items" class="bg-white rounded-lg shadow p-6 hover:shadow-lg transition-shadow duration-200">
            <div class="flex items-center">
                <div class="p-3 rounded-full bg-blue-100 text-blue-600">
                    <i class="fas fa-box text-xl"></i>
                </div>
                <div class="ml-4">
                    <h3 class="text-lg font-semibold text-gray-900">Manage Items</h3>
                    <p class="text-sm text-gray-600">Add, edit, or remove items from inventory</p>
                </div>
                <div class="ml-auto">
                    <i class="fas fa-chevron-right text-gray-400"></i>
                </div>
            </div>
        </a>

        <!-- Manage Borrows -->
        <a href="/admin/borrows" class="bg-white rounded-lg shadow p-6 hover:shadow-lg transition-shadow duration-200">
            <div class="flex items-center">
                <div class="p-3 rounded-full bg-green-100 text-green-600">
                    <i class="fas fa-exchange-alt text-xl"></i>
                </div>
                <div class="ml-4">
                    <h3 class="text-lg font-semibold text-gray-900">Manage Borrows</h3>
                    <p class="text-sm text-gray-600">Track and manage item borrowings</p>
                </div>
                <div class="ml-auto">
                    <i class="fas fa-chevron-right text-gray-400"></i>
                </div>
            </div>
        </a>

        <!-- Manage Users -->
        <a href="/admin/users" class="bg-white rounded-lg shadow p-6 hover:shadow-lg transition-shadow duration-200">
            <div class="flex items-center">
                <div class="p-3 rounded-full bg-purple-100 text-purple-600">
                    <i class="fas fa-users text-xl"></i>
                </div>
                <div class="ml-4">
                    <h3 class="text-lg font-semibold text-gray-900">Manage Users</h3>
                    <p class="text-sm text-gray-600">View and manage user accounts</p>
                </div>
                <div class="ml-auto">
                    <i class="fas fa-chevron-right text-gray-400"></i>
                </div>
            </div>
        </a>

        <!-- Store Map -->
        <a href="/admin/map" class="bg-white rounded-lg shadow p-6 hover:shadow-lg transition-shadow duration-200">
            <div class="flex items-center">
                <div class="p-3 rounded-full bg-yellow-100 text-yellow-600">
                    <i class="fas fa-map text-xl"></i>
                </div>
                <div class="ml-4">
                    <h3 class="text-lg font-semibold text-gray-900">Store Map</h3>
                    <p class="text-sm text-gray-600">Update tool store layout map</p>
                </div>
                <div class="ml-auto">
                    <i class="fas fa-chevron-right text-gray-400"></i>
                </div>
            </div>
        </a>

        <!-- Lost & Out of Stock -->
        <a href="/admin/lost-items" class="bg-white rounded-lg shadow p-6 hover:shadow-lg transition-shadow duration-200">
            <div class="flex items-center">
                <div class="p-3 rounded-full bg-red-100 text-red-600">
                    <i class="fas fa-exclamation-triangle text-xl"></i>
                </div>
                <div class="ml-4">
                    <h3 class="text-lg font-semibold text-gray-900">Lost & Out of Stock</h3>
                    <p class="text-sm text-gray-600">Manage problematic items</p>
                </div>
                <div class="ml-auto">
                    <i class="fas fa-chevron-right text-gray-400"></i>
                </div>
            </div>
        </a>
    </div>
</div>
